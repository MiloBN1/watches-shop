{
  "version": 2,
  "builds": [
    {
      "src": "watches-server/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "watches-shop/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "watches-server/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "watches-shop/$1"
    }
  ]
}
